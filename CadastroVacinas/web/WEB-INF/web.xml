<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastrandoVacinas</servlet-name>
        <servlet-class>CadastrandoVacinas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarVacina</servlet-name>
        <servlet-class>buscarVacina</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrandoPessoas</servlet-name>
        <servlet-class>CadastrandoPessoas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarPessoas</servlet-name>
        <servlet-class>buscarPessoas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarVacinas</servlet-name>
        <servlet-class>ListarVacinas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPessoas</servlet-name>
        <servlet-class>ListarPessoas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrandoVacinas</servlet-name>
        <url-pattern>/CadastrandoVacinas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarVacina</servlet-name>
        <url-pattern>/buscarVacina</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrandoPessoas</servlet-name>
        <url-pattern>/CadastrandoPessoas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarPessoas</servlet-name>
        <url-pattern>/buscarPessoas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarVacinas</servlet-name>
        <url-pattern>/ListarVacinas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPessoas</servlet-name>
        <url-pattern>/ListarPessoas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Home.html</welcome-file>
    </welcome-file-list>
</web-app>
